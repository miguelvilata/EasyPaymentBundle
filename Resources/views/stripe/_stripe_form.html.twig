{{ form_start(form, {'action': url('easy_payment_stripe_process' ), 'attr': {'id': 'easy_payment_stripe_from'}}) }}

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="{{ form.children.key.vars.value }}"
        {#data-description="{{ form.vars.value.description }}"#}
        {#data-amount="{{ form.vars.value.amount }}"#}

        {% for item in form.stripe_data.children %}
                data-{{ item.vars.name }}="{{ item.vars.value }}"
        {% endfor %}
        >
</script>

{#{{ form_widget(form.stripe_data) }}#}
{{ form_widget(form.metadata) }}
{{ form_rest(form) }}

{{ form_end(form) }}
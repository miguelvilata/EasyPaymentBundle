{{ form_start(form, {'action': url('easy_payment_stripe_process' )}) }}

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="{{ form.children.key.vars.value }}"

        {% for item in form.stripe_data.children %}
            {% if ('label' == item.vars.name) %}
                data-{{ item.vars.name }}="{{ item.vars.value|trans({}, 'easy_payment') }}"
            {% else %}
                data-{{ item.vars.name }}="{{ item.vars.value }}"
            {% endif %}
        {% endfor %}
        >
</script>

{{ form_widget(form.metadata) }}
{{ form_rest(form) }}

{{ form_end(form) }}